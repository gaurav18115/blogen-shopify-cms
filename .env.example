# ==========================================
# BLOGEN SHOPIFY CMS - ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env.local for development
# Set these variables in Vercel dashboard for production

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from: https://supabase.com/dashboard/project/nultoplmuhasjpiythdq/settings/api

# Public URL (safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://nultoplmuhasjpiythdq.supabase.co

# Anonymous key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# Service role key (PRIVATE - server-side only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_role_key_here

# Direct database connection (optional)
DATABASE_URL=postgresql://postgres:[password]@db.nultoplmuhasjpiythdq.supabase.co:5432/postgres

# ==========================================
# SHOPIFY INTEGRATION
# ==========================================
# Create a Shopify app at: https://partners.shopify.com/

# App credentials from Shopify Partners dashboard
SHOPIFY_APP_KEY=your_shopify_app_key_here
SHOPIFY_APP_SECRET=your_shopify_app_secret_here

# OAuth scopes (permissions your app needs)
SHOPIFY_SCOPES=read_content,write_content,read_products,write_products,read_themes,write_themes

# Webhook secret for verifying Shopify webhooks
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# OAuth redirect URI (update with your domain)
SHOPIFY_REDIRECT_URI=http://localhost:3000/api/auth/shopify/callback

# API version
SHOPIFY_API_VERSION=2024-01

# ==========================================
# AI SERVICES - AZURE OPENAI
# ==========================================

# Azure OpenAI Configuration
# Get from: https://portal.azure.com -> Your OpenAI Resource -> Keys and Endpoint
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_OPENAI_API_VERSION=2025-04-01-preview

# Azure OpenAI Deployment Names
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-mini
AZURE_OPENAI_FALLBACK_DEPLOYMENT=gpt-4o-mini

# Alternative: Anthropic (Claude) Configuration  
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here

# AI Model Configuration
DEFAULT_AI_MODEL=gpt-5-mini
FALLBACK_AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
AI_MAX_REQUESTS_PER_HOUR=100

# Azure-specific settings
AZURE_OPENAI_USE_MANAGED_IDENTITY=false
AZURE_OPENAI_RESOURCE_GROUP=your-resource-group
AZURE_OPENAI_SUBSCRIPTION_ID=your-subscription-id

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# NextAuth.js configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-jwt-secret-minimum-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# JWT secret for API authentication
JWT_SECRET=your-jwt-secret-for-api-routes

# Encryption key for sensitive data (32 bytes)
# Generate: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data-storage

# ==========================================
# RATE LIMITING & SECURITY
# ==========================================

# Rate limiting configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==========================================
# EMAIL SERVICES - BREVO (SENDINBLUE)
# ==========================================
# Get credentials from: https://app.brevo.com/settings/keys/api

# SMTP Configuration for transactional emails
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_smtp_login
SMTP_PASS=your_brevo_smtp_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Blogen Shopify CMS

# Brevo API Configuration for campaigns and advanced features
BREVO_API_KEY=your_brevo_api_key_here
BREVO_API_URL=https://api.brevo.com/v3

# Email templates and settings
EMAIL_VERIFICATION_TEMPLATE_ID=1
PASSWORD_RESET_TEMPLATE_ID=2
WELCOME_EMAIL_TEMPLATE_ID=3
NEWS_LETTER_LIST_ID=2

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXX

# ==========================================
# FILE STORAGE & CDN
# ==========================================

# File upload limits
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif

# CDN Configuration (if using external CDN)
CDN_URL=https://your-cdn-domain.com
CDN_API_KEY=your_cdn_api_key

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Environment
NODE_ENV=development

# Debug settings
DEBUG=true
LOG_LEVEL=debug

# Application settings
APP_NAME=Blogen Shopify CMS
APP_URL=http://localhost:3000
APP_VERSION=1.0.0

# Feature flags
FEATURE_AI_GENERATION=true
FEATURE_BULK_PUBLISHING=true
FEATURE_ANALYTICS=true
FEATURE_COLLABORATION=false

# ==========================================
# DEVELOPMENT ONLY
# ==========================================

# Mock API responses (development only)
MOCK_SHOPIFY_API=false
MOCK_AI_RESPONSES=false

# Database seeding
SEED_DATABASE=false
SEED_SAMPLE_POSTS=10

# Development tools
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================
# These will be different in production:

# NEXTAUTH_URL=https://your-production-domain.vercel.app
# SHOPIFY_REDIRECT_URI=https://your-production-domain.vercel.app/api/auth/shopify/callback
# APP_URL=https://your-production-domain.vercel.app
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=error